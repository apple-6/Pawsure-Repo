{
  "version": "0.2.0",
  "extensionDependencies": ["Dart-Code.dart-code", "Dart-Code.flutter"],
  "configurations": [
    
    // --- FLUTTER APP LAUNCHERS ---
    {
      "name": "Flutter: Run on Windows",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/pawsure_app",
      "program": "lib/main.dart",
      "args": ["--dart-define=API_BASE_URL=http://localhost:3000"]
    },
    {
      "name": "Flutter: Run on Chrome",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/pawsure_app",
      "program": "lib/main.dart",
      "args": ["--dart-define=API_BASE_URL=http://localhost:3000"]
    },
    {
      "name": "Flutter: Run on Emulator",
      "request": "launch",
      "type": "dart",
      "cwd": "${workspaceFolder}/pawsure_app",
      "program": "lib/main.dart"
    },
    
    // --- BACKEND SERVER LAUNCHER ---
    {
      "name": "NestJS: Run Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": ["run", "start:dev"],
      "cwd": "${workspaceFolder}/pawsure_backend",
      "console": "integratedTerminal"
    }
  ]
}